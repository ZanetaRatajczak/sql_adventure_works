SELECT 

	CustomerID,

	CONCAT(UPPER(SUBSTRING(FirstName, 1, 1)), LOWER(SUBSTRING(FirstName, 2))) as FirstName,

	CONCAT(UPPER(SUBSTRING(MiddleName, 1, 1)), LOWER(SUBSTRING(MiddleName, 2))) as MiddleName,

	CONCAT(UPPER(SUBSTRING(LastName, 1, 1)), LOWER(SUBSTRING(LastName, 2))) as LastName,

	EmailAddress

FROM Customer

WHERE EmailAddress NOT REGEXP '^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$';


